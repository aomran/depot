<h2>Your Cart</h2>

<table class="items table table-striped">
	<%= render(cart.line_items) %>
	<tr>
		<td colspan="2">Total</td>
		<td><%= number_to_currency(cart.total_price) %></td>
	</tr>
</table>

<table>
    <tr>
    <td><%= link_to raw('<i class="icon-shopping-cart"></i> Checkout'), new_order_path, class: "btn btn-success btn-small" %></td>
    <td><%= link_to raw('<i class="icon-trash"></i> Empty Cart'), cart, method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-small" %></td>
  </tr>
</table>