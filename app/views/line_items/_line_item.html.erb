<% if line_item == @current_item %>
	<tr id = "current_item" class="item_<%= line_item.product_id %>">
<% else %>
	<tr class="item_<%= line_item.product_id %>">
<% end %>
		<td><%= line_item.quantity %> </td>
		<td><%= line_item.product.title %></td>
		<td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
		<td><%= button_to 'X', decrement_line_item_path(line_item), remote: true %></td>
	</tr>