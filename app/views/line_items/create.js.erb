$('#notice').hide();

// at start the cart is hidden, when one item is added then show it
$('#cart').show('blind', 200);

// re-render the cart partial after we add an item
$('#cart').html("<%= escape_javascript render(@cart) %>");

// highlight the item that was added
// $('tr.item_<%= @line_item.product_id %>').effect("highlight", {color: '#88ff88'}, 1000);
$('#cart .success').removeClass('success');
$('.item_<%= @line_item.product_id %>').addClass("success");