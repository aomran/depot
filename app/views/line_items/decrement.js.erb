// Whenever we delete a line_item, we reload the cart partial and highlight it
$('#cart').html("<%= escape_javascript render(@cart) %>");
$('#cart .success').removeClass('success');
$('.item_<%= @line_item.product_id %>').addClass("success");

// if there's only one item then hide the cart after deleting the item
if ($('#cart .items tr').length == 1) {$('#cart').hide('blind', 200)};
